{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "declarationMap": true
  },
  "include": ["./src/**/*.ts", "index.ts"], // Sử dụng ** để bao gồm tất cả file .ts trong thư mục và các thư mục con
  "typedocOptions": {
    "entryPoints": ["./src/index.ts"], // Sửa entryPoints để chỉ trỏ đến file index.ts
    "out": "docs"
  }
}
